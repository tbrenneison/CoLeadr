@model CoLeadr.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Members
        </dt>
        <dd>
            <ul>
                @foreach (var member in Model.Members)
                {
                    <li>@Html.DisplayFor(model => member.FirstName) @Html.DisplayFor(model => member.LastName) </li>
                }
            </ul>
        </dd>

        <dt>
            Projects
        </dt>
        <dd>
            <ul>
                @foreach (var project in Model.Projects)
                {
                    <li>@Html.DisplayFor(model => project.ProjectName) </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.GroupId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
