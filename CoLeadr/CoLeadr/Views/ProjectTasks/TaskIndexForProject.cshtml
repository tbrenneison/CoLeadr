@model IEnumerable<CoLeadr.Models.ProjectTask>

@{
    ViewBag.Title = "Index";
}

<h2>Index For @ViewBag.ProjectName</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsComplete)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProjectTaskId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProjectTaskId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProjectTaskId })
            </td>
        </tr>
    }

</table>
